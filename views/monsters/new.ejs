<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs") %>
</head>

<body>
    <%- include("../partials/styles.ejs") %>

        <div class="full-page">
            <header>
                <%- include("../partials/header.ejs") %>
            </header>
            <div class="shell">
                <div class="new-form">
                    <form action="/monsters" method="POST">
                        <label>Image URL: </label><input type="text" name="img" />
                        <label>Monster Name: </label><input type="text" name="name" />
                        <label>Description: </label><textarea name="description" cols="30" rows="10"></textarea>
                        <label>Type: </label><input type="text" name="type" />
                        <label>Alignment: </label><input type="text" name="almt" />
                        <label>Armor Class: </label><input type="text" name="armcls" />
                        <label>Hit Points: </label><input type="text" name="hitpts" />
                        <label>Speed: </label><input type="number" name="speed" />
                        <label>Skills: </label><input type="text" name="skills" />
                        <label>Damage Resistences: </label><input type="text" name="dmgrst" />
                        <label>Damage Vulnerabilities: </label><input type="text" name="dmgvul" />
                        <label>Actions and Abilities: </label><textarea name="actions" cols="30" rows="10"></textarea>
                        <label>Stats: </label><input type="text" placeholder="STR" name="str" />
                        <input type="text" placeholder="DEX" name="dex" />
                        <input type="text" placeholder="CON" name="con" />
                        <input type="text" placeholder="INT" name="int" />
                        <input type="text" placeholder="WIS" name="wis" />
                        <input type="text" placeholder="CHA" name="cha" /><br />
                        <input type="submit" value="Add Monster" />
                    </form>
                </div>
            </div>
        </div>

</body>

</html>